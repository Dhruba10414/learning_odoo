<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="action_package" model="ir.actions.act_window">
            <field name="name">Packages</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tourism.package</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling face">
                    Create Your Packages!
                </p>
            </field>
        </record>

        <record id="action_customer" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">tourism.customer</field>
            <field name="view_mode">tree,form,calendar,pivot</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling face">
                    Create Your Customers!
                </p>
            </field>
        </record>

        <menuitem id="tourism_root_menu"
              name="Tourism"
              web_icon="tourism,static/description/icon.png"
              sequence="6"/>

        <menuitem id="tourism_package_menu"
              name="Packages"
              action="action_package"
              parent="tourism_root_menu"
              sequence="7"/>

        <menuitem id="tourism_customer_menu"
              name="Customer"
              action="action_customer"
              parent="tourism_root_menu"
              sequence="8"/>

    </data>

</odoo>