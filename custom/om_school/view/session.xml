<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <data>

        <record model="ir.ui.view" id="session_form_view">
            <field name="name">school.session.form</field>
            <field name="model">school.session</field>
            <field name="arch" type="xml">
                <form string="session form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <field name="student_id"/>
                            <field name="instructor_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration"/>
                        </group>
                        <notebook>
                            <page string="courses">
                                <field name="course_ids"/>
                            </page>
                        </notebook>
                    </sheet>

                </form>

            </field>

        </record>

        <record model="ir.ui.view" id="session_list_view">
            <field name="name">school.session.list</field>
            <field name="model">school.session</field>
            <field name="arch" type="xml">
                <tree string="session list">
                    <field name="name"/>
                    <field name="instructor_id"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="session_calendar_view">
            <field name="name">school.session.calendar</field>
            <field name="model">school.session</field>
            <field name="arch" type="xml">
                <calendar string="session calendar" date_start="start_date" date_stop="end_date" color="instructor_id" mode="month">
                    <field name="name"/>
                    <field name="instructor_id"/>

                </calendar>


            </field>
        </record>

        <record model="ir.ui.view" id="session_kanban_view">
            <field name="name">school.session.kanban"</field>
            <field name="model">school.session</field>
            <field name="arch" type="xml">
                <kanban default_group_by="student_id">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                              oe_kanban_global_click_edit oe_semantic_html_override
                                              oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">

                                <div class="oe_dropdown_kanban">
                                    <!-- dropdown menu -->
                                    <div class="oe_dropdown_toggle">
                                        <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="oe_clear"></div>

                                </div>

                                <div t-attf-class="oe_kanban_content">
                                    <!-- title -->
                                    Session name:
                                    <field name="name"/>
                                    <br/>
                                    Start date:
                                    <field name="start_date"/>
                                    <br/>
                                    duration:
                                    <field name="duration"/>
                                </div>

                            </div>

                        </t>

                    </templates>

                </kanban>

            </field>
        </record>
    </data>
</odoo>