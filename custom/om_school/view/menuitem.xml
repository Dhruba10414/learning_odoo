<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="action_student" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling face">
                    Create Your students!
                </p>
            </field>
        </record>

        <record id="action_session" model="ir.actions.act_window">
            <field name="name">Sessions</field>
            <field name="res_model">school.session</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling face">
                    Create Your students!
                </p>
            </field>
        </record>

        <menuitem id="school_root_menu"
              name="School"
              web_icon="om_school,static/description/icon.png"
              sequence="3"/>

        <menuitem id="school_student_menu"
              name="Students"
              action="action_student"
              parent="school_root_menu"
              sequence="4"/>

        <menuitem id="school_session_menu"
              name="Sessions"
              action="action_session"
              parent="school_root_menu"
              sequence="5"/>
    </data>


</odoo>