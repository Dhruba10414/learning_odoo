<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record model="ir.ui.view" id="school_sale_wizard_form_view">
            <field name="name">school.sale.wizard.form</field>
            <field name="model">school.sale.wizard</field>
            <field name="arch" type="xml">
                <form string="Create sale order for session">
                    <group>
                        <field name="session_id"/>
                        <field name="session_course_ids" invisible="1"/>
                        <field name="course_ids" domain="[('id','in',session_course_ids)]"/>

                    </group>

                    <footer>
                        <button name="create_sale_orders" type="object"
                                string="Create" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>

                    </footer>
                </form>
            </field>
        </record>

        <act_window id="launch_sale_wizard"
                    name="Create Sale Order"
                    binding_model="school.session"
                    res_model="school.sale.wizard"
                    target="new"
                    view_mode="form"/>

    </data>

</odoo>
